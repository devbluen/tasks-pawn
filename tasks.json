{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-normal",
            "type": "shell",
            "command": "node",
            "args": [
                "${workspaceFolder}/.vscode/build.js",
                "${workspaceFolder}/pawno/pawncc",
                "'${file}'",
                "'-i${workspaceFolder}/pawno/include'",
                "'-D${fileDirname}'",
                "'-;+'",
                "'-(+'",
                "'-d3'"
            ],
            "runOptions": {
                "instanceLimit": 1,
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": false,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            },
            "problemMatcher": {
                "owner": "pawn",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*?)\\(([0-9]*)[- 0-9]*\\) \\: (fatal error|error|warning) [0-9]*\\: (.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "message": 4
                }
            }
        }
    ],
}